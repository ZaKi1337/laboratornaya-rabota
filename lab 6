# laboratornaya-rabota
#include <stdio.h>

#include <conio.h>

#define K 4

#define N 4

void main(void)

{

int x[K][N]; // массив из K на N элементов

int S1; // сумма элементов над главной диагональю

int S2; // сумма элементов под главной диагональю

int i, j;

// ввод массива

for (i = 0; i < K; i++)

for (j = 0; j < N; j++)

scanf_s("%d", &x[i][j]);

// вывод введенного массива

for (i = 0; i < K; i++)

{

for (j = 0; j < N; j++)

printf("%4d ", x[i][j]);

printf("\n");

}

// суммирование элементов

S1 = 0;

for (i = 0; i < K - 1; i++)

{

j = i + 1;

S1 = S1 + x[i][j];

}

printf("S1 = %d\n", S1);

S2 = 0;

for (i = 1; i < K ; i++)

{

j = i - 1;

S2 = S2 + x[i][j];

}

printf("S2 = %d\n", S2);

// сравнение сумм диагоналей

if (S1 < S2)

{

for (i = 0; i < K - 1; i++)

{

j = i + 1;

x[i][j] = 0;

}

}

else

{

for (i = 1; i < K; i++)

{

j = i - 1;

x[i][j] = 0;

}

}

// вывод массива

for (i = 0; i < K; i++)

{

for (j = 0; j < N; j++)

printf("%4d ", x[i][j]);

printf("\n");

}

_getch();

}
